@model IEnumerable<JobBoard.Model.Job>

@{
    ViewData["Title"] = "Index";
}

<h1>Jobs</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpiresAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpiresAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><i title="Edit" class="fas fa-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.Id"><i title="Details" class="far fa-list-alt"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><i title="Delete" class="fas fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
